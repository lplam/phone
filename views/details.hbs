<div class="wrapper">
  <div class="container_fullwidth">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="products-details">
                <div class="preview_image">
                  <div class="preview-small">
                    <img id="zoom_03" src="{{main_src}}_1.jpg" data-zoom-image="{{main_src}}_1.jpg" alt="">
                  </div>
                  <div class="thum-image">
                    <ul id="gallery_01" class="prev-thum">
                      <li>
                        <a href="#" data-image="{{main_src}}_1.jpg" data-zoom-image="{{main_src}}_1.jpg">
                          <img src="{{main_src}}_1.jpg" alt="">
                        </a>
                      </li>
                      <li>
                        <a href="#" data-image="{{main_src}}_2.jpg" data-zoom-image="{{main_src}}_2.jpg">
                          <img src="{{main_src}}_2.jpg" alt="">
                        </a>
                      </li>
                      <li>
                        <a href="#" data-image="{{main_src}}_3.jpg" data-zoom-image="{{main_src}}_3.jpg">
                          <img src="{{main_src}}_3.jpg" alt="">
                        </a>
                      </li>
                      <li>
                        <a href="#" data-image="{{main_src}}_4.jpg" data-zoom-image="{{main_src}}_4.jpg">
                          <img src="{{main_src}}_4.jpg" alt="">
                        </a>
                      </li>
                    </ul>
                  </div>

                  <div class="usermenu" style="float: none; margin: 8px 44px;">
                    <button id="add-to-cart" type="submit">Add To Shopping Cart</button>
                  </div>
                </div>
                <div class="products-description">
                  {{!-- <div class='offer'> {{main_offer}} </div> --}}
                  <h5 class="name"> {{main_name}} </h5>
                  <p> {{main_describe}} </p>
                  <hr class="border">
                  <div class="price">
                    Price : 
                    <span class="new_price">
                      {{main_new_price}} <sup> ₫ </sup>
                    </span>
                    {{!-- <span class="old_price">
                      {{main_old_price}} <sup> ₫ </sup>
                    </span> --}}
                  </div>
                  <hr class="border">
                  <div class="row">
                    <div class="col-md-3 col-sm-3">Screen:</div>
                    <div class="col-md-9 col-sm-9">{{main_screen}}</div>
                  </div>
                  <hr class="border">
                  <div class="row">
                    <div class="col-md-3 col-sm-3">Camera:</div>
                    <div class="col-md-9 col-sm-9">{{main_camera}}</div>
                  </div>
                  <hr class="border">
                  <div class="row">
                    <div class="col-md-3 col-sm-3">Pin:</div>
                    <div class="col-md-9 col-sm-9">{{main_pin}}</div>
                  </div>
                  <hr class="border">
                  <div class="row">
                    <div class="col-md-3 col-sm-3">Ram:</div>
                    <div class="col-md-9 col-sm-9">{{main_ram}}</div>
                  </div>
                  <hr class="border">
                  <div class="row">
                    <div class="col-md-3 col-sm-3">CPU:</div>
                    <div class="col-md-9 col-sm-9">{{main_cpu}}</div>
                  </div>
                  <hr class="border">
                  <div class="row">
                    <div class="col-md-3 col-sm-3">OS:</div>
                    <div class="col-md-9 col-sm-9">{{main_os}}</div>
                  </div>               
                </div>              
          </div>
        </div>
      </div>

                {{!-- COMMENT TEXTFIELD --}}
                <div class="well">
                  <h5 style="font-weight:400">Write your comment ...<span class="glyphicon glyphicon-pencil"></span></h5>
                  <form method="post">
                    <div class="form-group">
                      <textarea class="form-control" rows="3" id="cmt-txt" required></textarea>
                      <input style="margin-top: 19px; width: 50%; border-radius: 4px;" type="text" placeholder="Input name" id="cmt-name" {{state}} required value="{{name}}">
                    </div>
                    <button type="submit" class="btn btn-primary" id="cmt-sm">Send</button>
                  </form>
                </div>

                {{!-- COMMENT LIST --}}
                <div class="cmt-list">
                  {{{comment_list}}}
                </div>

                <ul class="pagination pagination-lg pull-right">
                  {{{page_list}}}
                </ul>

              <div id="productsDetails" class="hot-products">
                <h3 class="title">
                  <strong> Similar </strong>
                  Products
                </h3>
                <div class="control">
                  <a id="prev_hot" class="prev" href="#">
                    &lt;
                  </a>
                  <a id="next_hot" class="next" href="#">
                    &gt;
                  </a>
                </div>

                <ul id="hot">
                  {{{items}}}
                </ul>
              </div>       
    </div>
  </div>
</div>
    