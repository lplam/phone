<div class="wrapper">
    <table>
        <tbody>
            {{{items}}}
        </tbody>
    </table>
</div>

<button class="add" title="Add New Producer" onclick="document.getElementById('id08').style.display='block'">
    <i class="fa fa-plus" aria-hidden="true"></i>
</button>

<div class="usermenu">
    <div id="id08" class="modal">
        <form class="modal-content animate" method="post" action="/add-producer">
            <div class="imgcontainer">
                <button type="reset" onclick="document.getElementById('id08').style.display='none'" class="close" title="Close">
                    <i class="fa fa-times" aria-hidden="true"></i>
                </button>
            </div>
            <div class="view-container">
                <h1 style="text-align:center">Add New Producer</h1>
                <div class="container">
                    <div class="row">
                        <div class="col-md-3 col-sm-3">
                            <label for="name">Name:</label>
                        </div>
                        <div class="col-md-9 col-sm-9">
                            <input type="text" name="name" required>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-9 col-sm-9">
                            <button type="submit">Add New Producer</button>
                        </div>
                        <div class="col-md-3 col-sm-3">
                            <button class="cancelbtn" type="reset" onclick="document.getElementById('id08').style.display='none'">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="usermenu">
    <div id="id09" class="modal">
        <form class="modal-content animate" id="myForm" method="post">
            <div class="imgcontainer">
                <span onclick="document.getElementById('id09').style.display='none'" class="close" title="Close">
                    <i class="fa fa-times" aria-hidden="true"></i>
                </span>
            </div>
            <div class="view-container">
                <h1 style="text-align:center">Delete Producer</h1>
                <div class="container">
                    <div class="row">
                        <div class="col-md-3 col-sm-3">
                            <label for="name">Name:</label>
                        </div>
                        <div class="col-md-9 col-sm-9">
                            <input type="text" id="name" name="name" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-9 col-sm-9">
                            <button class="delBtn" onclick="document.getElementById('myForm').action = '/delete-producer'" type="submit">Delete Producer</button>
                        </div>
                        <div class="col-md-3 col-sm-3">
                            <button class="cancelbtn" onclick="document.getElementById('id09').style.display='none'">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>